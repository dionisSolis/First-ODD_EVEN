using System;

namespace oddEven
{
    class Program
    {
        static void Main(string[] args)
        {
            int digit;
            bool isTruth;

            Console.WriteLine("Введите натуральное число");
            digit = int.Parse(Console.ReadLine());
            isTruth = false;

            if (digit % 10 == 6)
            {
                isTruth = true;
            }
            else
            {
                isTruth = false;
            }

            Console.WriteLine($"Условие: четность, последняя цифра 6. Выполнено? {isTruth}");
            Console.Read();
        }
    }
}
